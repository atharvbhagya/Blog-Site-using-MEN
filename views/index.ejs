<html lang="en">
  <%- include('./partials/head.ejs')%>
<body>
  <!-- Page Header -->
  <%- include('./partials/nav.ejs')%>
  <header class="masthead">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="site-heading">
            <h1>Hi welcome!</h1>
            <h3>Something in Mind? Blog it Up!</h3>
            
            <span class="subheading">Created by Atharv Bhagya</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Main content -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <% for(var i=0; i<posts.length; i++){%>
          <% let likeId=posts[i]._id;
          let postNo= i; %>
          <div class="post-preview" >
            <a href="/post/<%=posts[i]._id%>">
              <h2 class="post-title">
                <%= posts[i].title %>
              </h2>
            </a>
          </div>
          <p class="post-meta" id="<%=postNo%>">Posted by
            <a href="#"><%= posts[i].username %></a>
            on <%= posts[i].createdAt.toDateString() %>
            <button class="like">
            
              <i class="far fa-thumbs-up"></i>
            </button>
           <%=posts[i].Like.count%>
            <button class="dislike">
              <i class="far fa-thumbs-down"></i>
            </button>
            20
          </p>
          <hr>
        <%}%>
        
        <!-- Pager -->
        <div class="clearfix">
          <a class="btn btn-primary float-right" href="#">Older Posts â†’</a>
        </div>
      </div>
    </div>
  </div>


  <%- include('./partials/footer.ejs')%>
</body>
</html>
 
 
